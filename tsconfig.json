{
	"extends": "./tsconfig-checks.json",
	"compilerOptions": {
		"noEmit": true,
		"jsx": "preserve",
		"rootDir": "./",
		"baseUrl": "./",
		"paths": {
			"@containers/*": ["src/containers/*"],
			"@components/*": ["src/components/*"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["src/", "next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"typeRoots": ["emotion.d.ts"]
}
